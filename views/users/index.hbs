<h1>{{title}}</h1>
<table class="table table-striped table-hover">
    <thead>
    <th>User Name</th>
    <th>Role</th>
    {{#if user}}
        <th>Delete</th>
    {{/if}}
    {{#each users}}
        <tr>
            <td>
                {{#if ../user}}
                    <a href="/users/edit/{{this._id}}">
                        {{this.username}}
                    </a>
                {{else}}
                    {{this.username}}
                {{/if}}
            </td>
            <td>{{this.role}}</td>
            {{#if ../user}}
                <td>
                    <a href="/users/delete/{{this._id}}" class="btn btn-danger"
                       > <!--onclick="return areYouSure();"-->
                        Delete
                    </a>
                </td>
            {{/if}}
        </tr>
    {{/each}}
    </thead>
</table>
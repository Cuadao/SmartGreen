<h1>Edit Project</h1>

<form method="post">
    <fieldset>
        <label for="projectName" class="col-2">Project Name:</label>
        <input name="projectName" id="projectName" required value="{{project.projectName}}">
    </fieldset>
    <fieldset>
        <label for="ProjDesc" class="col-2">Description:</label>
        <input name="ProjDesc" id="ProjDesc" required value="{{project.ProjDesc}}">
    </fieldset>
    <fieldset>
        <label for="projDate" class="col-2">Date:</label>
        <input name="projDate" id="projDate" required type="date" value="{{project.projDate}}">
    </fieldset>
    <!--<fieldset> STATUS BY DEFAULT SCHEMA
        <label for="projStatus" class="col-2">Status:</label>
        <input name="projStatus" id="projStatus" required>
    </fieldset>-->
    <fieldset>
        <label for="projCreator" class="col-2">Creator:</label>
        <input name="projCreator" id="projCreator" required value="{{project.projCreator}}">
    </fieldset>
    <fieldset>
        <label for="projCategory" class="col-2">Category:</label>
        <select name="projCategory" id="projCategory">
            {{#each categories}}
                {{ createOption this.catName ../project.projCategory}}
            {{/each}}
        </select>
    </fieldset>
    <fieldset>
        <label for="projStatus" class="col-2">Status:</label>
        <select name="projStatus" id="projStatus">
        {{createOption 'Created' ../project.projStatus}}
        <!--{{createOption 'Revision' ../project.projStatus}}
        {{createOption 'Looking-Sponsor' ../project.projStatus}}
        {{createOption 'Working-On' ../project.projStatus}}-->
        {{createOption 'Finished' ../project.projStatus}}
        {{createOption 'Canceled' ../project.projStatus}}
        </select>
    </fieldset>
    <button class="offset-3 btn btn-primary">Save</button>
</form>
<h1>{{title}}</h1>
<a href="/projects/add">Add new project</a>
<table class="table table-striped table-hover">
    <thead>
    <th>Project Name</th>
    <th>Description</th>
    <th>Creation Date</th>
    <th>Status</th>
    <th>Creator</th>
    <th>Category</th>
    <th>Delete</th>
    {{#each projects}}
        <tr>
            <td>{{this.projectName}}</td>
            <td>{{this.ProjDesc}}</td>
            <td>{{this.projDate}}</td>
            <td>{{this.projStatus}}</td>
            <td>{{this.projCreator}}</td>
            <td>{{this.projCategory}}</td>
            <td>
                <a href="/projects/delete/{{this._id}}" class="btn btn-danger"
                    onclick="return areyouSure();">
                    Delete
                </a>
            </td>
        </tr>
    {{/each}}
    </thead>
</table>